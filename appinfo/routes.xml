<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/routes.xsd">
    <!-- These routes are accessible via OCS API with: OC.linkToOCS('/apps/samewindow/api/v1/config', 2) -->
    <ocs>
        <route name="api_config_get" url="/api/v1/config" verb="GET">
            <action>OCA\SameWindow\Controller\ConfigController::getConfig</action>
            <requirements>_method=GET</requirements>
            <cors>true</cors>
            <csrf>false</csrf>
        </route>
        <route name="api_config_set" url="/api/v1/config" verb="POST">
            <action>OCA\SameWindow\Controller\ConfigController::setConfig</action>
            <requirements>_method=POST</requirements>
            <cors>true</cors>
            <csrf>false</csrf>
        </route>
        <route name="api_l10n_get" url="/api/v1/l10n" verb="GET">
            <action>OCA\SameWindow\Controller\L10NController::getTranslations</action>
            <requirements>_method=GET</requirements>
            <cors>true</cors>
            <csrf>false</csrf>
        </route>
    </ocs>
</routes>
